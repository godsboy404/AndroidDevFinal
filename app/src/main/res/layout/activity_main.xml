<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 顶部标题区域 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@color/colorCyan"
        android:gravity="center_horizontal"
        android:text="欢迎选购"
        android:textColor="@color/colorOrange"
        android:textSize="40sp" />

    <!-- 刷新按钮 -->
    <TextView
        android:id="@+id/tv_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="340dp"
        android:layout_marginTop="12dp"
        android:text="刷新"
        android:textColor="@color/colorRed"
        android:textSize="22sp" />

    <!-- 欢迎信息 -->
    <TextView
        android:id="@+id/tv_student_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginBottom="4dp"
        android:gravity="center_horizontal"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="italic" />

    <!-- 商品分类图标区域 -->
    <LinearLayout
        android:id="@+id/category_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/tv_student_number"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:gravity="center_vertical">

        <!-- 学习用品 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/ib_learning_use"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/colorWhite"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_learning_use" />
            <TextView
                android:id="@+id/tv_learning_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="学习用品"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 电子用品 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/ib_electric_product"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/colorWhite"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_electric_product" />
            <TextView
                android:id="@+id/tv_electric_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="电子用品"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 生活用品 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/ib_daily_use"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/colorWhite"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_daily_use" />
            <TextView
                android:id="@+id/tv_daily_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="生活用品"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 体育用品 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/ib_sports_good"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/colorWhite"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_sports_good" />
            <TextView
                android:id="@+id/tv_sports_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="体育用品"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- 商品列表区域 - 使用固定高度，确保显示多个商品 -->
    <LinearLayout
        android:id="@+id/product_list_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/category_container"
        android:layout_above="@+id/location_compact_container"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="4dp"
            android:text="最新商品"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lv_all_commodity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />
    </LinearLayout>

    <!-- 紧凑型定位模块 - 默认只显示按钮 -->
    <LinearLayout
        android:id="@+id/location_compact_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp">

        <!-- 折叠/展开按钮 -->
        <LinearLayout
            android:id="@+id/location_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="位置与距离计算"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_expand_collapse"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/arrow_down_float" />
        </LinearLayout>

        <!-- 展开的内容区域 - 初始时隐藏 -->
        <LinearLayout
            android:id="@+id/location_expand_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:visibility="gone">

            <!-- 第一行：定位按钮和当前位置 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:text="开始定位"
                    android:id="@+id/btn_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_current_location_summary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="未获取位置"
                    android:textSize="12sp"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- 经纬度输入区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="位置1:"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_lat1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:hint="纬度"
                    android:inputType="numberDecimal|numberSigned"
                    android:maxLines="1"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_lng1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:hint="经度"
                    android:inputType="numberDecimal|numberSigned"
                    android:maxLines="1"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="位置2:"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_lat2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:hint="纬度"
                    android:inputType="numberDecimal|numberSigned"
                    android:maxLines="1"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_lng2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:hint="经度"
                    android:inputType="numberDecimal|numberSigned"
                    android:maxLines="1"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 计算距离和结果显示 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_calculate_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计算距离"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_distance_result"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="距离：未计算"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 详细定位信息 -->
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="当前位置："
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <!-- 底部导航栏 -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 首页 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/ib_home_page"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_home_page" />

            <TextView
                android:id="@+id/tv_home_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 发布闲置 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/ib_add_product"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_add_product" />

            <TextView
                android:id="@+id/tv_add_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布闲置"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 个人中心 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/ib_personal_center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_personal_center" />

            <TextView
                android:id="@+id/tv_personal_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>